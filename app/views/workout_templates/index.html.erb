<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All workouts
    </h1>

    <a href="/workouts/new" class="btn btn-block btn-outline-secondary">
      Add a new workout
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @workouts.each do |workout| %>
      <tr>
        <td>
          <%= workout.id %>
        </td>

        <td>
          <%= workout.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(workout.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(workout.updated_at) %> ago
        </td>

        <td>
          <a href="/workouts/<%= workout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
