<h1>
  Edit workout #<%= @workout.id %>
</h1>

<hr>

<form action="/update_workout/<%= @workout.id %>" method="post">

    <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="date" id="date" name="date" class="form-control" value="<%=@workout.date%>">
  </div>

  <div class="form-group">
    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%=current_user.id%>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update workout
  </button>
</form>

<hr>

<a href="/workouts">
  Go back
</a>
