<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bodyparts
    </h1>

    <a href="/bodyparts/new" class="btn btn-block btn-outline-secondary">
      Add a new bodypart
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bodyparts.each do |bodypart| %>
      <tr>
        <td>
          <%= bodypart.id %>
        </td>

        <td>
          <%= bodypart.name %>
        </td>

        <td>
          <%= time_ago_in_words(bodypart.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(bodypart.updated_at) %> ago
        </td>

        <td>
          <a href="/bodyparts/<%= bodypart.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
