<% if @circuit.errors.any? %>
  <% @circuit.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit circuit #<%= @circuit.id %>
</h1>

<hr>

<form action="/update_circuit/<%= @circuit.id %>" method="post">

  <div class="form-group">
    <label for="workout_id">
      Workout
    </label>

    <input type="text" id="workout_id" name="workout_id" class="form-control" value="<%= @circuit.workout_id %>">
  </div>

  <div class="form-group">
    <label for="exercise_id">
      Exercise
    </label>

    <input type="text" id="exercise_id" name="exercise_id" class="form-control" value="<%= @circuit.exercise_id %>">
  </div>

  <div class="form-group">
    <label for="reps">
      Reps
    </label>

    <input type="text" id="reps" name="reps" class="form-control" value="<%= @circuit.reps %>">
  </div>

  <div class="form-group">
    <label for="sets">
      Sets
    </label>

    <input type="text" id="sets" name="sets" class="form-control" value="<%= @circuit.sets %>">
  </div>

  <div class="form-group">
    <label for="weight">
      Weight
    </label>

    <input type="text" id="weight" name="weight" class="form-control" value="<%= @circuit.weight %>">
  </div>

  <div class="form-group">
    <label for="unit">
      Unit
    </label>

    <input type="text" id="unit" name="unit" class="form-control" value="<%= @circuit.unit %>">
  </div>

  <div class="form-group">
    <label for="note">
      Note
    </label>

    <input type="text" id="note" name="note" class="form-control" value="<%= @circuit.note %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update circuit
  </button>
</form>

<hr>

<a href="/circuits">
  Go back
</a>
