<!-- Validation failure messages -->
<% if @exercise.present? %>
  <% if @exercise.errors.any? %>
    <% @exercise.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new exercise
</h1>


<hr>

<form action="/create_exercise" method="post">


  <div class="form-group">
    <label for="bodypart_id">
      Bodypart
    </label>

    <%= select_tag("bodypart_id", options_from_collection_for_select(Bodypart.all, :id, :name, @exercise.try(:bodypart_id)), :class => "form-control") %>
    or <a href="/bodyparts/new">add a new bodypart</a> first
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <button class="btn btn-outline-success">
    + Create exercise
  </button>
</form>

<hr>

<a href="/exercises">
  Go back
</a>
