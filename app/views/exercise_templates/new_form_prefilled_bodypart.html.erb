<h1>
  Add a new exercise
</h1>


<hr>

<form action="/create_exercise" method="post">


  <div class="form-group">

  <input type="hidden" id="bodypart_id" name="bodypart_id" class="form-control" value="<%=@bodypart.id%>">
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <button class="btn btn-outline-success">
    + Create exercise
  </button>
</form>

<hr>

<a href="/exercises">
  Go back
</a>
