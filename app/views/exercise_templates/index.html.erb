<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All exercises
    </h1>

    <a href="/exercises/new" class="btn btn-block btn-outline-secondary">
      Add a new exercise
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Bodypart
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @exercises.each do |exercise| %>
      <tr>
        <td>
          <%= exercise.id %>
        </td>

        <td>
          <%= exercise.name %>
        </td>

        <td>
          <%= exercise.bodypart_id %>
        </td>

        <td>
          <%= time_ago_in_words(exercise.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(exercise.updated_at) %> ago
        </td>

        <td>
          <a href="/exercises/<%= exercise.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
