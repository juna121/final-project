<% if @exercise.errors.any? %>
  <% @exercise.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit exercise #<%= @exercise.id %>
</h1>

<hr>

<form action="/update_exercise/<%= @exercise.id %>" method="post">

  <div class="form-group">
    <label for="bodypart_id">
      Bodypart
    </label>

    <%= select_tag("bodypart_id", options_from_collection_for_select(Bodypart.all, :id, :name, @exercise.try(:bodypart_id)), :class => "form-control") %>
    or <a href="/bodyparts/new">add a new bodypart</a> first
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @exercise.name %>">
  </div>


  <button class="btn btn-outline-secondary">
    Update exercise
  </button>
  
    <a href="/delete_exercise/<%= @exercise.id %>" class="btn btn-outline-danger">
      Delete exercise
  </a>
</form>

<hr>

<a href="/exercises">
  Go back
</a>
