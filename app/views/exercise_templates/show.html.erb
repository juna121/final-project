<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @exercise.name %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/exercises" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/exercises/<%= @exercise.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit exercise
        </a>
      </div>

      <div class="col">
        <a href="/delete_exercise/<%= @exercise.id %>" class="btn btn-block btn-outline-secondary">
          Delete exercise
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Bodypart
      </dt>
      <dd>
        <%= Bodypart.find(@exercise.bodypart_id).name %>

      </dd>

      
    </dl>
  </div>
</div>

